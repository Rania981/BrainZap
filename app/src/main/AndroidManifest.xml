<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_brain_logo"
        android:roundIcon="@drawable/ic_brain_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BrainSprint">
        
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.BrainSprint.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity 
            android:name=".activities.MainActivity"
            android:exported="false" />
        <activity 
            android:name=".activities.GameActivity"
            android:exported="false"
            android:theme="@style/Theme.BrainSprint.NoActionBar" />
        <activity 
            android:name=".activities.GameOverActivity"
            android:exported="false"
            android:theme="@style/Theme.BrainSprint.NoActionBar" />
        <activity 
            android:name=".activities.HistoryActivity"
            android:exported="false" />
        
    </application>

</manifest>
